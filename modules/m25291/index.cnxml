    <section id="id8648503">
      <title>MASSAMEDIA EN DIE MUSIEKBEDRYF</title>
      <para id="id1168186181092">MUSIEK</para>
      <figure id="id2416189">
        <media id="id2416189_media" alt="">
          <image mime-type="image/png" src="../../media/Picture 1-932e.png" id="id2416189__onlineimage" height="246" width="298"/>
        </media>
